{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ES2018", "DOM"],
    "declaration": true,
		"baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
		"paths": {
			"app/*": ["src/app/*"],
			"core/*": ["src/core/*"],
			"config/*": ["src/config/*"],
			"utils/*": ["src/utils/*"]
		}
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}